def _run_powershell(script: str) -> Tuple[int, str, str]:
    p = subprocess.run(
        ['powershell', '-NoProfile', '-ExecutionPolicy', 'Bypass', '-Command', script],
        capture_output=True,
        text=True,
    )
    return p.returncode, (p.stdout or '').strip(), (p.stderr or '').strip()
